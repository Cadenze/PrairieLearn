{{#question}}
<script>
    $(function () {
  $('[data-toggle="popover"]').popover()
})
</script>

    <div class="row">
        <div class="column {{dropzone_layout}}">
            <ul id="{{answer_name}}-options" name="{{answer_name}}" class="list-group pl-order-blocks-connected-sortable">
                <li class='list-group-item list-group-item-primary list-group-item-header info-fixed'>
                    <span>{{source-header}} </span>
                    <a role="button" class="btn btn-light btn-sm" data-toggle="popover" title="Order Blocks" data-content="And here's some amazing content. It's very engaging. Right?" data-trigger="focus" tabindex="0">
                        <i class="fa fa-question-circle" aria-hidden="true"></i>
                    </a>
                </li>
                    {{#options}}
                        <li class="list-group-item shadow list-group-item-darkmode list-group-item-action" string="{{.}}" data-title="{{.}}">
                            <div>
                                <span>{{.}}</span>
                            </div>
                        </li>
                    {{/options}}
                </ul>
        </div>
            <div class="column  {{dropzone_layout}}">
                <ul id="{{answer_name}}-dropzone" name="{{answer_name}}" class="list-group {{check_indentation}} pl-order-blocks-connected-sortable dropzone">
                    <li class="list-group-item list-group-item-header-dropzone info-fixed">
                        <span>{{source-header}} </span>
                    <a role="button" class="btn btn-light btn-sm" data-toggle="popover" title="Order Blocks" data-content="And here's some amazing content. It's very engaging. Right?" data-trigger="focus" tabindex="0">
                        <i class="fa fa-question-circle" aria-hidden="true"></i>
                    </a>
                    </li>
                    {{#submission_dict}}
                        <li string="{{text}}" data-title="{{text}}" style='margin-left: {{indent}}px;' class="list-group-item list-group-item-darkmode list-group-item-action shadow">{{text}}</li>
                    {{/submission_dict}}
                </ul>
            </div>
        </div>
    <input id="{{answer_name}}-input" type="hidden" name="{{answer_name}}-input" value=""/>

{{/question}}

{{#submission}}
    {{^parse-error}}
        </p>
        <ul class="list-group answer_block_container  list-group-item-darkmode">
            <li class="list-group-item"><strong>Your answer: </strong>
        {{#perfect_score}}
            <span class="badge {{color}}"><i class="fa fa-check" aria-hidden="true"></i> 100%</span>
        {{/perfect_score}}
        {{^perfect_score}}
                <span class="badge {{color}}"><i class="fa fa-times" aria-hidden="true"></i>
        {{score}}%</span> {{feedback}}
        {{/perfect_score}}
        </li>
        {{#student_submission}}
        		<li class="list-group-item list-group-item-action list-group-item-darkmode"> {{text}} </li>
        {{/student_submission}}
        </ul>
    {{/parse-error}}

    {{#parse-error}}
        <strong>Your answer: </strong>
        <div id="pl-order-blocks-{{uuid}}" class="d-inline-block">
            <span class="badge text-danger badge-invalid"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Invalid</span>
            <a role="button" class="btn btn-sm btn-secondary small border" data-placement="auto" data-trigger="focus" data-toggle="popover" data-html="true" style="margin-left: 5px" title="Format Error" tabindex="0" data-content="{{parse-error}}"> Why <i class="fa fa-question-circle" aria-hidden="true"></i></a>
        </div>
    {{/parse-error}}
    <div>{{data}}</div>
{{/submission}}

{{#true_answer}}
        <ul class="list-group answer_block_container">
            <li class="list-group-item list-group-item-info"><strong>Correct answer ({{grading_mode}}{{check_indentation}}):</strong></li>
        {{#question_solution}}
            <li class="list-group-item list-group-item-action list-group-item-darkmode">{{text}}</li>
        {{/question_solution}}
        </ul>
{{/true_answer}}
