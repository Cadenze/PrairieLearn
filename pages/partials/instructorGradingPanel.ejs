<% if (authz_data.has_instructor_view || authz_data.has_course_permission_view) { %>
    <div class="card mb-4 border-success">
      <% if (typeof diff !== 'undefined') { %>
        <div class="card-header bg-success"><%= diff %> Grade</div>
      <% } else {%>
        <div class="card-header bg-success">Grading Panel</div>
      <% } %>
      <div class="card-body">
        <% if (typeof submission.graded_by !== 'undefined') { %>
          <p class="graded-by">Graded by <%= submission.graded_by %></p>
        <% } %>
        <% if (typeof submission_updated !== 'undefined' && submission_updated === true) { %>
            <blockquote style="color: red">Submission updated</blockquote>
        <% } %>
        <form name="instance-question-manual-grade-update-form" method="POST">
            <input type="hidden" name="__csrf_token" value="<%= __csrf_token %>">
            <input type="hidden" name="assessment_id" value="<%= assessment_instance.assessment_id %>">
            <input type="hidden" name="assessment_question_id" value="<%= instance_question.assessment_question_id %>">
            <input type="hidden" name="instance_question_modified_at" value="<%= instance_question.modified_at %>">
            <input type="hidden" name="diff_submission" value="<%= !!typeof diff %>">
            <!--TO DO: Fix camel, pascal case inconsistencies-->
            <div class="form-group">
              <label for="submission-score">Score:</label>
              <div class="input-group">
                <input type="number" min="0" max="100" step="5" class="form-control" id="submission-score" class="submission-score" name="submission_score" value="<%= submission.score % 5 > 0 ? submission.score * 100 : submission.score %>" aria-describedby="score-help-block"/>
                <span class="input-group-addon">%</span>
              </div>
              <small id="score-help-block" class="form-text text-muted">
                This percentage will override the most recent submission score.
              </small>
            </div>
            <div class="form-group">
              <label for="submission-feedback">Feedback:</label>
              <textarea name="submission_note" class="form-control" id="submission-feedback" class="submission-feedback"><% if (submission.feedback) {%><%= submission.feedback.manual %><% } %></textarea>
            </div>
            <div class="text-right">

              <% if (typeof diff == 'undefined') { %>
                <button name="__action" value="add_manual_grade" class="btn btn-primary">Submit and Next</button>
                <button name="__action" value="abort_manual_grading" class="btn btn-danger">Skip and Leave Grading</button>  
              <% } else { %>
                <button name="__action" value="accept_manual_grade_conflict" class="btn btn-primary">Accept <%= diff %> Grade</button>
              <% }%>
            </div>
        </form>
      </div>
      <div class="card-footer small">
          This box is not visible to students.
      </div>
    </div>
<% } %>
    